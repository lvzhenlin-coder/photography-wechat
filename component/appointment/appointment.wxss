/* component/appointment/appointment.wxss */
.container{
	margin: 0;
	padding: 0;
	position: fixed;
  right: 30rpx;
  bottom: 40rpx;
  z-index: 99;
}

button{
  padding: 0;
  margin: 0;
  min-height: 0;
}

.button-container{
  display: flex;
  justify-content: flex-end; 
}

.yuyue{
  height: 100rpx;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 50%;
  background-color: #90dbe6;
  z-index: 99;
  box-shadow: #555 0px 0px 1px
}

.yuyue-hover{
  height: 110rpx;
  width: 110rpx;
  box-shadow: 0 0 4rpx #333;
}

.yuyue-mine{
  background-color: #ffffff;
  color: #8a8a8a;
  margin-top: 20rpx;
}

.yuyue-nav{
  width: 80rpx;
  height: 40rpx;
  background-color: #90dbe6;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
}