/* pages/order/order.wxss */
.container{
	margin: 0;
	padding: 0;
	padding-bottom: 40rpx;
}

.order-step{
	width: 100%;
}
.van-field__label{
	color: #000000;
	font-weight: bold;
	font-size: 30rpx;
}

.order-card{
	width: 680rpx;
	min-height: 300rpx;
	/* box-shadow: 0 0 5rpx #666666; */
	border: 1rpx solid #333;
	border-radius: 20rpx;
	margin-top: 30rpx;
	overflow: hidden;
}

.delete{
	width: 100%;
	display: flex;
	justify-content: flex-end;
}

.delete-button{
	margin-right: 20rpx;
	margin-bottom: 20rpx;
	background-color: #FF0033;
	font-size: 30rpx;
	padding: 0 20rpx;
	color: #FFFFFF;
	font-weight: bold;
}

.container-button{
	margin: 0;
	padding: 0;
	position: fixed;
  right: 30rpx;
  bottom: 40rpx;
  z-index: 99;
}

button{
  padding: 0;
  margin: 0;
  min-height: 0;
}

.button-container{
  display: flex;
  justify-content: flex-end; 
}

.yuyue{
  height: 100rpx;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 50%;
  background-color: #009966;
  z-index: 99;
  box-shadow: #555 0px 0px 1px
}

.yuyue-hover{
  height: 110rpx;
  width: 110rpx;
  box-shadow: 0 0 4rpx #333;
}

.yuyue-mine{
  background-color: #fff;
  color: #8a8a8a;
  margin-top: 20rpx;
}

.yuyue-nav{
  width: 80rpx;
  height: 40rpx;
  background-color: #009966;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
}


